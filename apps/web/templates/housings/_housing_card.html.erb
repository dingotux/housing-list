<div class="housing-card">
  <div class="picture">
    <%= image housing.picture %>
  </div>
  <div class="details">
    <div class="description">
      <h2 class="title"><%= housing.title %></h2>
      <p><%= truncate(housing.description, 145, separator: ' ') %></p>
      <%= link_to "See on #{housing.provider.capitalize}", housing.url, target: "_blank" %>
    </div>
    <div class="proposer">
      <img src="<%= housing.proposer_avatar_url %>" alt="<%= housing.user.first_name %>" class=" proposer-picture">
      <div class="proposer-details">
        <span class='proposer-name'><%= housing.user.first_name %></span>
        <span class='proposal-date'>on <%= format_date(housing.created_at.to_date) %></span>
      </div>
    </div>
  </div>
  <div class="price">
    <span>
      <i class="fa fa-user" aria-hidden=true></i>
      <%= housing.total_price_per_person(trip.travelers_count) %> â‚¬
    </span>
  </div>
  <div class="actions">
    <% if authorization.edit? %>
      <%=
        link_to routes.edit_trip_housing_path(trip.id, housing.id), title: 'edit', class: 'btn-circle' do
          i(class: "fa fa-pencil", 'aria-hidden' => true)
        end
      %>
    <% end %>
  </div>
</div>
