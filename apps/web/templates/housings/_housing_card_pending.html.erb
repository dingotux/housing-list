<div class="housing-card housing-card--pending">
  <div class="picture">
    <%= image housing.picture %>
  </div>
  <div class="details">
    <div class="description">
      <p>We are currently fetching your new housing information!</p>
      <%= link_to "See on #{housing.provider.capitalize}", housing.url, target: "_blank" %>
    </div>
    <div class="proposer">
      <%= image housing.proposer_avatar, class: 'proposer-picture' %>
      <div class="proposer-details">
        <span class='proposer-name'><%= housing.user.first_name %></span>
        <span class='proposal-date'>on <%= format_date(housing.created_at.to_date) %></span>
      </div>
    </div>
  </div>
  <div class="price">
    <span>
      <i class="fa fa-user" aria-hidden=true></i>
      --- â‚¬
    </span>
  </div>
</div>
