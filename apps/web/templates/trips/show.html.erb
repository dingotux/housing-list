<div class="banner trip-show" style="background-image: url('<%= asset_path('lake-geneva.jpg') %>');">
  <div class="content">
    <h1 class="title">You and your friends are heading to <%= trip.destination %> 🌏 😱</h1>
    <div class="details-container">
      <div class="details">
        <ul class="list-unstyled overview overview-housing">
          <li><strong><%= trip.housings_count %></strong> potential housing places</li>
          <li>Between <strong><%= trip.total_price_min_per_pers %>€</strong> and <strong><%= trip.total_price_max_per_pers %>€</strong> per person</li>
          <li><strong><%= trip.total_price_avg_per_pers %>€</strong> per person on average</li>
        </ul>
        <ul class="list-unstyled overview overview-trip">
          <li>From <strong><%= format_trip_date(trip.starting_on) %></strong> to <strong><%= format_trip_date(trip.ending_on) %></strong></li>
          <li>Near <strong><%= trip.destination %></strong></li>
          <li>For <strong><%= trip.travelers_count %> people</strong></li>
        </ul>
      </div>
    </div>
    <div class="action-container">
      <%=
        link_to routes.new_trip_housing_path(trip.id), class: 'btn btn-primary' do
          i(class: "fa fa-plus-circle", 'aria-hidden' => true)
          text 'New place'
        end
      %>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <%= trip_status %>
      <%= render partial: 'invitation_link' if trip_to_come? %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 housing-cards">
      <%= render partial: 'housings', locals: { housings: housings, trip: trip } %>
    </div>
  </div>
</div>
